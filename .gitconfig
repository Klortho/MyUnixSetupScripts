[push]
  default = current
[user]
	name = Chris Maloney
	email = maloneyc@ncbi.nlm.nih.gov
[alias]
  br = branch
  co = checkout
  ct = commit
  d = diff
  fe = fetch origin
  lol = log --graph --full-history --all --color --pretty=tformat:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[0m"
  s = status
  ss = status -s
  statsu = status

  # `nuke` feature: see here for info: https://github.com/Klortho/dotfiles
  nuke = !echo 'DRY RUN. Use nukem to clean:' && git status -s && git clean -ndxff $(git config --get-all nonuke.files | sed 's/^/-e /')
  nukem = !git clean -dxff $(git config --get-all nonuke.files | sed 's/^/-e /') && git checkout -f 
  nonuke = "!f() { git config $1 nonuke.files $2; }; f"

  ta = tag -a
[color]
  ui = true
[diff]
  submodule = log
[status]
  submodulesummary = 1
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
[core]
	excludesfile = /Users/klortho/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
